<div class='container px-5 px-sm-0'>
  <div class='row'>

    <div class='col-md-3 bg-info'>  <!--サイドバー-->
      <%= render 'layouts/sidebar' %>
    </div>

    <div class='col-md-8 offset-md-1'> <!--メインコンテンツ-->
      <h2><i class="fa-solid fa-user-check fa-sm" ></i><%= current_user.name %> さんが
      フォロー中のユーザーの投稿</h2>
        <% if @posts_follow == [] %>
          <div class="test-center">
            <%= image_tag "kogarashi.jpg", alt: "Logo", width: 200 %><br>
            まだ誰もフォローしてないようです<br>
            フォローしてみよう!
          </div>
        <% else %>
          <div>
            <%= render 'public/posts/index', posts: @posts_follow %>
          </div>
        <% end %>
    </div>

  </div>
</div>
