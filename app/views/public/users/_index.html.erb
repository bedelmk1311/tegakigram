        <table class='table table-hover table-inverse'>
        <% users.each do |user| %>
          <tr>
            <td> <!--プロフ画像と名前ー-->
              <%= image_tag user.get_profile_image, size: '50x50' %><br>
              <%= user.name %> <!--名前-->
            <td>
              <i class="fa-solid fa-calendar-days " style="color: #B197FC;"></i>
              <%= user.created_at.strftime('%Y年%m月%d日') %><br>
              <%= user.introduction %>
            </td>
            <td>
              <p><%= link_to "#{user.followings.count} フォロー中", user_followings_path(users) %></p>
              <p><%= link_to "#{user.followers.count} フォロワー", user_followers_path(users) %></p>
              <p><!--%= render 'public/relationships/btn', user: @user %--></p><!--余裕あれば-->
            </td>
            <td>
              <% if current_user != user%> <!--&&-->
                <% if current_user.following?(user) %>
                  <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete %>
                <% else %>
                  <%= link_to "フォローする", user_relationships_path(user.id), method: :post %>
                <% end %>
              <% end %>
            </td>
            <td>
              <!--%= render "relationships/follow", user: user, options: { class: "follow-link" } %-->
            </td>
          </tr>
        <% end %>
        </table>
