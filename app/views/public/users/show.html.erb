<div class='container px-5 px-sm-0'>
  <div class='row'>

    <div class='col-md-3 bg-info'>  <!--サイドバー-->
      <h2>サイドバー</h2>
    </div>
  
    <div class='col-md-8 offset-md-1'>  <!--メインコンテンツー-->
      <h2>仮<!--%="user_#{@user.id}"のプロフィール%-->プロ</h2>
      <%= link_to "編集", edit_user_path, class:"btn btn-outline-success btn-sm ml-5" %>

      <!--テンプレ化?-->
      <!--%= render 'posts/index',posts: @posts %-->
        <table class='table table-hover table-inverse'>
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th>intro</th>
              <th>followings</th>
              <th>followers</th>
              <th>登録日</th>
              <th colspan="4"></th>
            </tr>
          </thead>
          <tbody>
              <tr>
                <td> <!--プロフ画像ー-->
                  <%= image_tag @user.get_profile_image, size: '200x200' %>
                </td>
                <td> <!--名前ー-->
                  <%= @user.name %>
                </td>
                <td> <!--いるか？-->
                  <%= @user.introduction %>
                </td>
                <td> <!--途中あとフォロー一覧リンク　フォロー関連も共通化したい-->
                  フォロー数<!--%= user.followings.count %-->
                </td>
                <td>
                  フォロワー数<!--%= user.followers.count %-->
                </td>
                <td>
                  <%= @user.created_at.strftime('%Y年%m月%d日') %>
                </td>
                <td>
                  <!--%= render "relationships/follow", user: user, options: { class: "follow-link" } %-->
                </td>
              </tr>
          </tbody>
        </table>
      <!--テンプレ化?-->

    </div>

  </div>
</div>

  <div> <!--フォロー数とフォロワー数-->
    <p>follows</p>
    <p><%= link_to @user.followings.count, user_followings_path(@user) %></p>
    <p>followers</p>
    <p><%= link_to @user.followers.count, user_followers_path(@user) %></p>
  </div>

  <div> <!--フォローボタン/編集ボタン-->

      <% if current_user != @user%> <!--フォローボタンの表示-->
        <% if current_user.following?(@user) %>
          <%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete, class: "btn btn-info" %>
        <% else %>
          <%= link_to "フォローする", user_relationships_path(@user.id), method: :post, class: "btn btn-success" %>
        <% end %>
      <% end %>
      <%= link_to edit_post_path(@user), class: "btn btn-outline-secondary btn-block edit_user_#{@user.id}" do %>
        <i class="fas fa-user-cog"></i>
        <p>aaa</p>
      <% end %>

  </div>

