<div class='container'>
  <div class='row'>
  
    <div class='col-md-3 bg-info'>  <!--サイドバー-->
      <%= render 'layouts/sidebar' %>
    </div>

    <div class="col-md-8 px-5 px-sm-0 mx-auto"> <!--メインコンテンツ-->

      <!--%= render 'layouts/errors', obj: @post %-->
      <% if @user.errors.any? %> <!--バリデーションエラーメッセ-->
        <%= @user.errors.count %>件のエラーが発生しました
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
      <% end %>

    <h2>仮プロフィール編集</h2>

    <%= form_with model:@user, local:true do |f| %>
      <!--テンプレートエラー？-->
      <!--%= render 'layouts/errors', obj: @user %-->

      <div class="form-group">
        <%= f.text_field :name, placeholder: "name",class: "form-control name" %>
      </div>

     <div class="form-group"> <!--プロフィール画像-->
        <%= f.file_field :profile_image, class: "form-control-file user_image", accept: 'image/*' %>
      </div>

      <div class="form-group"> <!--自己紹介文-->
        <%= f.text_area :introduction, placeholder: "自己紹介", class: "form-control introduction" %>
      </div>

      <div class="form-group">  <!--更新ボタン-->
        <%= f.submit "変更を保存", class: 'btn btn-sm btn-outline-secondary' %>
      </div>
      
      <div class="form-group">  <!--戻るボタン-->
        <!--%= link_to '戻る', back_path, class:"btn btn-sm btn-outline-secondary " %-->
      </div>

      <div>
        <%= link_to "アカウント削除", user_confirm_path(@user), class: "btn btn-sm btn-outline-danger " %>

    <% end %>
  </div>
</div>
