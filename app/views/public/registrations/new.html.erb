<div class="container">
  <h2 class="text-center">会員登録</h2>

  <div class="text-center">
    <%= link_to root_path do %> <!--ロゴ-->
      <%= image_tag "logo_text_toka.png", alt: "Logo", width: 300 %>
    <% end %>
  </div>

  <div class="text-center">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <div class="field"><!--名前-->
        <%= f.text_field :name, placeholder: "name", autofocus: true, autocomplete: "name" %>
      </div>

      <div class="field"><!--メール-->
        <%= f.email_field :email, placeholder: "email", autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field"><!--パスワード-->
          <% if @minimum_password_length %>
          <% end %>
          <%= f.password_field :password, placeholder: "6文字のpassword", autocomplete: "new-password" %>
      </div>

      <div class="field"><!--パスワード-->
        <%= f.password_field :password_confirmation, placeholder: "確認用password",autocomplete: "new-password" %>
      </div>

      <div class="actions"><!--ボタン-->
        <%= f.submit "はじめる",class: "btn btn-sm btn-outline-success" %>
      </div>
    <% end %>
  </div>

  <h3 class="text-center" >すでに会員の方はこちら</h3>

  <!--%= render "/shared/links" %-->
</div>