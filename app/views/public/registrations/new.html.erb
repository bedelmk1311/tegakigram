<div class="container">
  <h2>仮新規登録画面</h2>

  <div class="text-center">
    <!--%= image_tag " 画像.png", alt: "Logo", class: "mb-余白", width: 100とか %-->
    <h2>ロゴタイトル入れます</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <div class="field"><!--メール-->
      <%= f.label :email %><br />
      <%= f.email_field :email, placeholder: "email", autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field"><!--パスワード-->
      <%= f.label :password %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, placeholder: "password", autocomplete: "new-password" %>
    </div>

    <div class="field"><!--パスワード-->
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, placeholder: "password",autocomplete: "new-password" %>
    </div>

    <div class="actions"><!--ボタン-->
      <%= f.submit "はじめる",class: "btn btn-sm btn-outline-success" %>
    </div>
  <% end %>

  <!--%= render "/shared/links" %-->
</div>