<div class='container'>
  <div class='row'>

    <div class='col-md-3'>  <!--サイドバー-->
      <%= render 'layouts/sidebar' %>
    </div>

    <div class='col-md-9'> <!--メインコンテンツ-->

      <!--バリデーションエラーメッセ-->
      <%= render 'layouts/error', obj: @post %>

      <h2 class="font-weight-bold">
        <i class="fa-solid fa-gear fa-sm" ></i>投稿編集
      </h2>
      <%= form_with model: @post do |f| %>
        <%= f.file_field :post_image, accept: "image/* ", class: "m-3" %> <!--#accept属性で画像の種類を指定-->
        <%= f.text_area :body, class: "form-control m-3", rows:'5' %>
        <!--<h4>仮ラベル</h4>-->
        <%= f.submit '投稿',class: "btn btn-sm btn-outline-success m-3" %>
        <!--%= link_to 'Show', @post, class: "post_#{@post.id}",class: "btn btn-sm btn-outline-success" %-->
        <%= link_to '戻る', :back, class:"btn btn-sm btn-outline-secondary " %>
      <% end %>

    </div>

  </div>
</div>