<div class='container px-5 px-sm-0'>


  <div class='row'>

    <div class='col-md-3 bg-info'>  <!--サイドバー-->
      <%= render 'layouts/sidebar' %>
    </div>

    <div class='col-md-8 offset-md-1'> <!--メインコンテンツ-->
      <h1>仮Home post#index</h1>
        <!--テンプレ化？-->
          <% @posts.each do |post| %>
            <div>
            <%= link_to(post_path(post.id)) do %> <!--投稿-->
                <%= image_tag post.get_image, size: '300x300' %>
              <% end %>

              <%= link_to(post.user) do %> <!--プロフ-->
                <%= image_tag post.user.get_profile_image, size:'30x30' %>
              <% end %>

                <p>(説明)<%= post.body %></p>
                <p><%= link_to "#{post.comments.count} コメント", post_path(post.id) %></p>
            </div>
          <% end %>
        <!--テンプレ化？-->
    </div>

  </div>
</div>