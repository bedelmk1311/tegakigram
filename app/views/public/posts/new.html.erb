<div class ="container">
    <h2>仮新規POST</h2>
  <div class="">
    <%= form_with model: @post_image do |f| %>
      <h4>画像</h4>
      <%= f.file_field :image, accept: "image/*" %>
      <h4>本文</h4>
      <%= f.text_area :body %>
      <h4>仮ラベル</h4>
      <%= f.text_field :label %>
      <%= f.submit '投稿',class: "btn btn-sm btn-outline-success" %>
    <% end %>
  </div>
</div>