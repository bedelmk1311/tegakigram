<div class='container'>
  <div class='row'>

    <div class='col-md-3 bg-info'>  <!--サイドバー-->
      <%= render 'layouts/sidebar' %>
    </div>

    <div class='col-md-8 offset-md-1'> <!--メインコンテンツ-->

      <% if @post.errors.any? %>  <!--バリデーションエラーメッセ-->
        <%= @post.errors.count %>件のエラーが発生しました
          <ul>
            <% @post.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
      <% end %>

      <h2><i class="fa-solid fa-circle-plus fa-sm " ></i>新しいポスト</h2>
      <%= form_with model: @post do |f| %>
        <%= f.file_field :post_image, accept: "image/*" %>
        <%= f.text_area :body, placeholder: "どんな作品か説明してみよう!" %>
        <h4>仮ラベル</h4>

        <%= f.submit '投稿',class: "btn btn-sm btn-outline-success" %>
      <% end %>
    </div>

  </div>
</div>