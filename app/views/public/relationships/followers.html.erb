<div class='container'>
  <div class='row'>

    <div class='col-md-3 bg-info'>  <!--サイドバー-->
      <%= render 'layouts/sidebar' %>
    </div>

    <div class='col-md-8 offset-md-1'> <!--メインコンテンツ-->
    <h2>仮<%= @user.name %> さんのフォロワー</h2>
      <% if @users == [] %>
        <p>ユーザーはいません</p><!--ここまで正しく動いてる-->
      <% else %>
        <table class='table table-hover table-inverse'>
          <tr>
            <td> <!--プロフ画像と名前ー-->
              <!--%= image_tag @users.get_profile_image, size: '200x200' %--><br>
              <%= @user.name %> <!--名前-->
              <p><!--%= link_to "#{@users.followings.count} フォロー中", user_followings_path(@users) %--></p>
              <p><!--%= link_to "#{@users.followers.count} フォロワー", user_followers_path(@users) %--></p>

            </td>
            <td>
              <i class="fa-solid fa-calendar-days " style="color: #B197FC;"></i>
              <%= @user.created_at.strftime('%Y年%m月%d日') %><br>
              <%= @user[:introduction] %>
            </td>
            <td>
              <!--%= render "relationships/follow", user: user, options: { class: "follow-link" } %-->
            </td>
          </tr>
        </table>
      <!--テンプレ化?-->
      <% end %>
    </div>

  </div>
</div>