<div class="container bg-custom-color">
  <h2 class="text-center">仮ログイン画面</h2>

  <div class="text-center">
    <%= link_to root_path do %> <!--ロゴ-->
      <%= image_tag "logo_text_toka.png", alt: "Logo", width: 200 %>
    <% end %>
  </div>

  <div class="text-center">
    <%= form_with(model: resource, url: session_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <div class="field"><!--メール欄-->
        <%= f.email_field :email, placeholder: "email", autofocus: true, autocomplete: "email",class: "m-1" %>
      </div>

      <div class="field"><!--パスワード欄-->
        <%= f.password_field :password, placeholder: "password" , autocomplete: "current-password",class: "m-1" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions"><!--ボタン-->
        <%= f.submit "ログイン" , class: "btn btn-sm btn-outline-success m-1"%>
      </div>
    <% end %>
    <%= render "public/shared/links" %> <!--deviseのリンク-->
  </div>

</div>