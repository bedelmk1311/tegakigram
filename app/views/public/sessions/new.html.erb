<div class="container bg-custom-color">
  <h2 class="text-center">仮ログイン画面</h2>

  <div class="text-center">
    <%= link_to root_path do %> <!--ロゴ-->
      <%= image_tag "logo_text_toka.png", alt: "Logo", width: 300 %>
    <% end %>
  </div>

  <div class="text-center">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field"><!--メール欄-->
        <%= f.email_field :email, placeholder: "email", autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field"><!--パスワード欄-->
        <%= f.password_field :password, placeholder: "password" , autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions"><!--ボタン-->
        <%= f.submit "ログイン" , class: "btn btn-sm btn-outline-success"%>
      </div>
    <% end %>
  </div>

  <!--%= render "/shared/links" %-->
</div>